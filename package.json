{
  "publisher": "xiaoluabei",
  "preview": true,
  "name": "neutral-vscode-theme",
  "displayName": "Neutral Theme",
  "type": "module",
  "version": "0.0.2",
  "description": "A dark theme with a focus on readability and minimalism.",
  "author": {
    "name": "abei",
    "email": "xiaoluabei@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abeixiaolu/xiaoluabei-vscode-theme.git"
  },
  "categories": [
    "Themes"
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.43.0"
  },
  "contributes": {
    "themes": [
      {
        "label": "Neutral Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/Neutral Dark-color-theme.json"
      },
      {
        "label": "Neutral Light",
        "uiTheme": "vs",
        "path": "./themes/Neutral Light-color-theme.json"
      },
      {
        "label": "Neutral Light Soft",
        "uiTheme": "vs",
        "path": "./themes/Neutral Light Soft-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "esno scripts/build.ts",
    "dev": "esno watch scripts/build.ts",
    "pack": "npm run build && vsce pack --no-dependencies",
    "publish": "npm run build && vsce publish --no-dependencies",
    "release": "bumpp && npm run publish",
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@types/node": "^22.10.2",
    "@vscode/vsce": "^3.6.0",
    "bumpp": "^9.8.1",
    "eslint": "^9.17.0",
    "esno": "^4.7.0",
    "typescript": "^5.7.2"
  }
}
